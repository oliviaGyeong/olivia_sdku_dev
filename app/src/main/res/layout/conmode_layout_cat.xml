<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2" >
            <TextView
				android:text="CON_MODE"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_conmode_cat"
                android:hint="LAN"
                android:text="LAN"
                android:layout_columnSpan="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
				android:text="CATIP"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_coninfo1_cat"
                android:text="10.0.0.162"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
				android:text="CATPORT"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_coninfo2_cat"
                android:text="15000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />	
        </GridLayout>

</LinearLayout>