<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sub_bg" >
  
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:text="연결모드"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    <EditText
	        android:id="@+id/edit_conmode_point"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="TEST_LAN" />
	</LinearLayout>
    <fragment
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/fragmentCard"
		android:name="com.example.kcpsecutest.common.CardInfoLayout"
		tools:layout="@layout/activity_main" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="거래금액"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_totamt_point"
            android:inputType="number"
            android:gravity="right"
            android:text="1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="포인트거래구분"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_potype_point"
            android:inputType="number"
            android:maxLength="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="원 거래일자"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_appday_point"
            android:inputType="number"
            android:maxLength="6"
            android:hint="YYMMDD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="원거래 승인번호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_appno_point"
            android:inputType="number"
            android:maxLength="12"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <RadioGroup
        android:id="@+id/rg_pocode_point"
        android:checkedButton="@+id/rbtn_save_point"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@id/rbtn_save_point"
            android:text="적립"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbtn_use_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용"/>
        <RadioButton
            android:id="@+id/rbtn_disc_point"
            android:text="할인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_poapp_point"
            android:text="승인 요청"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_pocan_point"
            android:text="취소 요청"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_pocheck_point"
            android:text="조회 요청"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
