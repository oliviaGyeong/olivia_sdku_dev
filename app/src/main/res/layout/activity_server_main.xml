<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sub_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_credit"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가맹정 정보 등록" />

            <Button
                android:id="@+id/btn_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="암호화 키" />

            <Button
                android:id="@+id/btn_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신용카드 승인/취소" />

            <Button
                android:id="@+id/btn_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현금영수증 발행/발행취소" />

            <Button
                android:id="@+id/btn_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="포인트 승인/취소" />

            <Button
                android:id="@+id/btn_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="멤버쉽 승인/취소" />

            <Button
                android:id="@+id/btn_pincrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="핀암호화" />

            <Button
                android:id="@+id/btn_pg_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PG신용" />

            <Button
                android:id="@+id/btn_pg_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PG현금" />

            <Button
                android:id="@+id/btn_cashCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수표조회" />

            <!--<Button
                android:id="@+id/btn_payon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payon" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>