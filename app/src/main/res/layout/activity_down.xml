<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sub_bg" >

    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="업체코드 : "
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_busicd_store"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:maxLength="4"
            android:singleLine="true" 
            android:text="TEST" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="사업자번호 : "
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_busino_store"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:inputType="number"
            android:singleLine="true"
            android:text="1138521083" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="단말기ID : "
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_termid_store"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:maxLength="15"
            android:singleLine="true"
            android:text="1002189855" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="지역번호 : "
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_areano_store"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:maxLength="4"
            android:singleLine="true"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok_store"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="등록" />

        <Button
            android:id="@+id/btn_cancel_store"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="취소" />
    </LinearLayout>

</LinearLayout>
