<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sub_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_credit"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_credit_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신용승인" />

            <Button
                android:id="@+id/btn_cash_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현금영수증" />

            <Button
                android:id="@+id/btn_point_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="포인트" />

            <Button
                android:id="@+id/btn_member_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="멤버십" />

            <Button
                android:id="@+id/btn_cashic_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현금IC" />

            <Button
                android:id="@+id/btn_etc_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기타기능" />

            <Button
                android:id="@+id/btn_print_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프린트모드" />

            <Button
                android:id="@+id/btn_pgcash_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PG현금" />

            <Button
                android:id="@+id/btn_pgcredit_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PG신용" />

            <Button
                android:id="@+id/btn_cashcheck_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수표조회" />

            <Button
                android:id="@+id/btn_mpoint_catmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M포인트" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>