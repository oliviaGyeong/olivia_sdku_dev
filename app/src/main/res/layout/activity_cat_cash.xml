<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sub_bg"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sv_catcash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true">
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
         	
		    <fragment
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/fragmentCon"
		        android:name="com.example.kcpsecutest.common.ConmodeLayout"
		        tools:layout="@layout/activity_main" />
		    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="발급용도" />
			    <EditText 
			        android:id="@+id/edit_passwd1_catcash"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:maxLength="1"
			        android:text="0"
			        android:hint="0" />
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="취소코드" />
			    <EditText 
			        android:id="@+id/edit_passwd2_catcash"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:maxLength="1"
			        android:text="1" />
		    </LinearLayout>
		    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="식별정보" />
			    <EditText 
			        android:id="@+id/edit_msdata_catcash"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="0101231234"
			        android:hint="0101231234" />
		    </LinearLayout>
		    <fragment
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/fragmentAmt"
		        android:name="com.example.kcpsecutest.common.AmtoptLayout"
		        tools:layout="@layout/activity_main" />
        
			<fragment
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/fragmentButton"
		        android:name="com.example.kcpsecutest.common.ButtonLayout"
		        tools:layout="@layout/activity_main" />
		
		</LinearLayout>
    </ScrollView>


</LinearLayout>
