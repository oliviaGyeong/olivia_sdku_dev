<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sub_bg"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sv_catprint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true">
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
        	<fragment
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/fragmentCon"
		        android:name="com.example.kcpsecutest.common.ConmodeLayout"
		        tools:layout="@layout/activity_main" />
		    
		    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4" >
		        <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="메시지" />
			    <EditText 
			        android:id="@+id/edit_message_catprint"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="안녕하세요"
			        android:hint="안녕하세요" />
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="option" />
			    <EditText 
			        android:id="@+id/edit_option_catprint"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="1"
			        android:hint="1" />
            	<TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="pos" />
			    <EditText 
			        android:id="@+id/edit_pos_catprint"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="1"
			        android:hint="1" />
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="size" />
			    <EditText 
			        android:id="@+id/edit_size_catprint"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="100"
			        android:hint="100" />
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="quality" />
			    <EditText 
			        android:id="@+id/edit_quality_catprint"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="1"
			        android:hint="1" />
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="linefeed" />
			    <EditText 
			        android:id="@+id/edit_linefeed_catprint"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="5"
			        android:hint="5" />
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="path" />
			    <EditText 
			        android:id="@+id/edit_path_catprint"
			        android:layout_columnSpan="3"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" />
        	
			</GridLayout>
            <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2" >
		        <Button 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_init_catprint"
			        android:text="초기화" />
        		<Button 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_message_catprint"
			        android:text="한줄메시지" />
        		<Button 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_barcode_catprint"
			        android:text="바코드" />
        		<Button 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_qrcode_catprint"
			        android:text="QR코드" />
        		<Button 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_bitmap_catprint"
			        android:text="Bitmap" />
        		<Button 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_linefeed_catprint"
			        android:text="LineFeed" />
        		<Button 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_cut_catprint"
			        android:text="PaperCut" />
        		<Button 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/btn_cashdrawer_catprint"
			        android:text="금전함" />
			</GridLayout>
            


		</LinearLayout>
        </ScrollView>


</LinearLayout>
