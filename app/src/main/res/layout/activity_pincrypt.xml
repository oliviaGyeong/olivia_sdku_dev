<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sub_bg" >

    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="카드번호 : "
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_cardno_pincrypt"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:maxLength="19"
            android:singleLine="true" 
            android:text="433028******1709" />

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="비밀번호 : "
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_passwd_pincrypt"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:maxLength="6"
            android:singleLine="true" 
            android:text="113399" />

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="WorkKey : "
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_workkey_pincrypt"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:maxLength="2"
            android:singleLine="true" 
            android:text="00" />

    </LinearLayout>
    
    <Button
            android:id="@+id/btn_ok_pincrypt"
            android:text="핀암호화"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>